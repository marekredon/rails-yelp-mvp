<h1>New Review for <%= @restaurant.name %></h1>

<!-- .class.downcase.pluralize => @review -> reviews -->

<div class="container">
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating %>
    <%= f.submit "Save" %>
  <% end %>
</div>


